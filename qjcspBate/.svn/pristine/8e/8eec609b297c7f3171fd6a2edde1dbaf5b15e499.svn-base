.top {
    line-height: 0.3rem;
    height: 1rem;
    background: #fff;
    height: 0.8rem;
    line-height: 0.8rem;
    min-width: 3.2rem;
    max-width: 6.4rem;
    width: 100%;
    z-index: 9999;
    font-size: 0.3rem;
    font-weight:800;
    color: #1a1a1a;
    text-align: center;
    position: relative;
}
.top .back {
    width: 0.2rem;
    position: absolute;
    left: 0.25rem;
    top: 50%;
    margin-top: -0.2rem;
}
.finishBtn{right:0.25rem;position: absolute;color: #fe8400; font-size: 0.22rem;font-weight:800}
.tit{color:#acacac;line-height:0.7rem;height:0.7rem;font-size:0.22rem;padding-left: 0.1rem;}
.tit img{vertical-align: baseline;width:0.14rem;margin-right:0.05rem;}
.area,.info_address,.userName,.tel_phone{height:0.55rem;line-height:0.55rem;background:#fff; padding-left: 0.3rem;}
.area,.userName{border-bottom:1px solid #f2f2f2}
.info_address input{color:#d8d8d8}
label{color:#ababab;font-size:0.2rem;}
.message,.addressMag{background:rgba(0,0,0,0.6);color:#fff;font-size:0.18rem;text-algin:center;margin:0 auto;width:1.8rem;line-height:0.4rem;height:0.4rem;position:fixed;bottom:1rem;text-align: center;left: 50%; margin-left: -0.75rem;display:none;}
input{margin-left:0.2rem;height:0.35rem;line-height:0.35rem;width: 5rem;}