/*
 * 意见反馈
 */
body{background:#f2f2f2;}
.textbox{
	width:5.98rem;
	height:2.98rem;
	border-radius: 0.1rem;
	background:#fff;
	border:1px solid #bfbfbf;
	padding: 0.3rem;
	margin: 0.3rem auto;
	color:#2f2f2f;
	font-size:0.26rem;
	display:block;
}
.phone{
	width:5.98rem;
	height:0.98rem;
	border-radius: 0.1rem;
	background:#fff;
	border:1px solid #bfbfbf;
	font-size:0.26rem;
	color:#2f2f2f;
	margin: 0 auto;
	padding-left: 0.3rem;
	line-height: 0.98rem;
	display:block;
}
.textbox_len {
    font-size: 0.22rem;
    color: #2f2f2f;
    text-align: right;
    padding: 0 0.2rem 0.2rem;
}
.btn{
	width:5.98rem;
	font-size:0.36rem;
	color:#fff;
	height:1rem;
	line-height: 1rem;
	text-align: center;
	background: #ff8420;
	margin: 0.3rem auto;
	border-radius: 0.1rem;
}
.testPhone {
    font-size: 20px;
    color: #ff5534;
    margin-left: 0.3rem;
    margin-top: 0.2rem;
    display: none;
}
.vague{
	width:100%;
	height:100%;
	background:#fff;
	opacity: 0.5;
}
