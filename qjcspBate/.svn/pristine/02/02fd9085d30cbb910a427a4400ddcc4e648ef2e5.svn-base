.top{
	height: 0.9rem;
	line-height: 0.9rem;
	background-color: #fff;
	border-bottom: #E4E4E4 solid 0.03rem;
	text-align: center;
}
.top img{
	width: 0.26rem;
	height: 0.44rem;
	vertical-align: bottom;
	margin-top: 0.2rem;
	margin-left: 0.2rem;
	float: left;
}
.info{
	color: #1a1a1a;
	font-size: 0.36rem;
    display: inline-block;
}
.myRedpackets{
	color:#ff8420;
	float: right;
	margin-right: 0.2rem;
}
.myRedpackets img{
	width: 0.44rem;
	height: 0.44rem;
}
.count{
	height: 0.28rem;
	margin-top: 0.2rem;
	text-align: center;
	font-size: 0.28rem;
	color: #666666;
}
.count em{
	color: #f25b3e;
}
.packet{
	background: url(../img/images/packet.png) no-repeat;
	margin-top: 0.2rem;
	width: 5.9rem;
	height: 1.67rem;
	background-size: cover;
	margin-left: 0.26rem;
}

.left{
	float: left;
	width: 1.7rem;
	height: 1.65rem;
	text-align: center;
}
.left img{
	position: absolute;
	width: 0.6rem;
	height: 0.6rem;
	display: none;
}
.left .show{
	display: block;
}
.left span{
	vertical-align: middle;
	display: inline-block;
	color: #f25b3e;
	font-size: 0.36rem;
	margin-top: 0.5rem;
	font-weight: 600;
}
.left span em{
	font-size: 0.6rem;
	margin-left: 0.1rem;
}
.right{
	float: right;
	width: 4.2rem;
	height: 1.65rem;
	padding-left: 0.2rem;
}
.right p{
	color: #4d4d4d;
	font-size: 0.28rem;
	margin-top: 0.2rem;
    margin-left: 0.1rem;
    margin-bottom: 0.1rem;
}
.right ul{
	color: #cccccc;
	font-size: 0.2rem;
	margin-left: 0.3rem;
}
.right ul li{
	list-style: initial;
	margin-bottom: 0.05rem;
}
.right img{
	float: right;
	width: 1rem;
	height: 1rem;
    margin-top: -1.3rem;
    margin-right: 0.3rem;
    display: none;
}
.right .show{
	display:block;
}












